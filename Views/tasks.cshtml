<body>
  <h1>All tasks</h1>
  @if (@Model.Count == 0) {
    <p>There are no tasks.</p>
  }
  <ul>
    @foreach (var category in @Model["categories"]) {
      <h3>@category.GetName()</h3>
      @foreach (var task in @category.GetTasks()) {
        <li>@task.GetDescription()</li>
      }
      <hr>
    }
  </ul>
  <a href="/tasks/new">Add new task</a>
</body>
